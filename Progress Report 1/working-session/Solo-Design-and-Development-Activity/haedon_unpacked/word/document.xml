      <w:r w:rsidDel="00000000" w:rsidR="00000000" w:rsidRPr="00000000">
        <w:rPr>
          <w:rtl w:val="0"/>
        </w:rPr>
        <w:t xml:space="preserve">Overall, </w:t>
      </w:r>
      <w:r w:rsidDel="00000000" w:rsidR="00000000" w:rsidRPr="00000000">
        <w:rPr>
          <w:i w:val="1"/>
          <w:rtl w:val="0"/>
        </w:rPr>
        <w:t xml:space="preserve">A Philosophy of Software Design</w:t>
      </w:r>
      <w:r w:rsidDel="00000000" w:rsidR="00000000" w:rsidRPr="00000000">
        <w:rPr>
          <w:rtl w:val="0"/>
        </w:rPr>
        <w:t xml:space="preserve"> promotes a mindset shift: treat good design as an investment, build deep modules with clean interfaces, and fight complexity at every step instead of accepting it as unavoidable.</w:t>
      </w:r>
    </w:p>
